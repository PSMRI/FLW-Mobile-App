<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home_activity.home.HomeFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_full_load_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_select_village"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:hint="@string/til_hint_selected_village"
            app:layout_constraintTop_toBottomOf="@id/ll_full_load_progress">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_select_village"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:drawableEnd="@drawable/ic_edit"
                android:inputType="textNoSuggestions"
                tools:text="NONE" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            tools:text="Space for tabs"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintTop_toBottomOf="@+id/til_select_village" />

        <include android:id="@+id/rv_home_icon"
            layout="@layout/rv_icon_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent"
            />

      <!--  <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_nhhr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_text_frag_home_nhhr"
            android:textColor="?attr/colorSecondary"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:padding="@dimen/padding_wide"
            android:backgroundTint="?attr/colorPrimary"
            android:backgroundTintMode="src_in"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>