<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ben"
            type="org.piramalswasthya.sakhi.model.BenBasicDomain" />

        <variable
            name="clickListener"
            type="org.piramalswasthya.sakhi.adapters.BenListAdapter.BenClickListener" />

        <variable
            name="showAbha"
            type="Boolean" />

        <variable
            name="hasAbha"
            type="Boolean" />

        <variable
            name="role"
            type="Integer" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:backgroundTint="?attr/colorPrimary"
        android:elevation="@dimen/padding_normal"
        app:cardCornerRadius="@dimen/padding_normal"
        app:cardElevation="@dimen/padding_normal">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> clickListener.onClickedBen(ben)}"
            showLayout="@{((role == 1) ? false : true)}">

            <LinearLayout
                android:id="@+id/ll_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorOnPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_tiny"
                app:layout_constraintTop_toTopOf="parent">

                <!--                <ImageView-->
                <!--                    android:id="@+id/iv_hh_logo"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="0dp"-->
                <!--                    android:paddingVertical="@dimen/padding_normal"-->
                <!--                    android:src="@drawable/ic__hh"-->
                <!--                    app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toTopOf="parent"-->
                <!--                    app:tint="?attr/colorPrimary" />-->


                <TextView
                    android:id="@+id/tv_hh_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_small"
                    android:text="@{ben.familyHeadName}"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorPrimaryVariant"
                    tools:text="Hello Meister"
                    app:drawableLeftCompat="@drawable/ic__hh"
                    app:drawableTint="?attr/colorPrimary" />

                <Button
                    android:id="@+id/btn_new_ben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_person"
                    android:paddingHorizontal="@dimen/padding_tiny"
                    android:text="@string/btn_rv_item_hh_add_ben"
                    android:onClick="@{()-> clickListener.onClickedHouseHold(ben)}"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:cornerRadius="@dimen/padding_normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hh_id"
                    android:textColor="?attr/colorPrimary"
                    app:backgroundTint="?attr/colorSecondary"
                    app:drawableTint="?attr/colorPrimary"
                    android:drawableStart="@drawable/ic_person"
                    app:layout_constraintEnd_toStartOf="@+id/iv_sync_state"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_hh_id"
                    app:layout_constraintTop_toTopOf="@+id/tv_hh_id"
                    app:strokeColor="?attr/colorPrimary" />

                <ImageView
                    android:id="@+id/iv_sync_state"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginHorizontal="@dimen/padding_small"
                    android:contentDescription="@string/iv_sync_state_tv"
                    app:syncState="@{ben.syncState}"
                    tools:src="@drawable/ic_synced" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_title_bar">

                <LinearLayout
                    android:id="@+id/ll_ben_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ben.benFullName}"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="Lala Land" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ben.age}"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="45 Years" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ben.gender}"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="Female" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ben_details_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="fill_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/ll_ben_details">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registration Date"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ben.regDate}"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="12-12-4523" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beneficiary ID"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            benId="@{ben.benId}"
                            syncState="@{ben.syncState}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="Lala Land" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ben.mobileNo}"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="0123456789" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ben_details_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/ll_ben_details_2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_abha"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        showLayout="@{showAbha? !hasAbha : showAbha}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:onClick="@{()-> clickListener.onClickABHA(ben)}"
                        android:text="ABHA"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnPrimary"
                        app:cornerRadius="@dimen/padding_normal"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_hh_id"
                        app:strokeColor="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        showLayout="@{showAbha? hasAbha: showAbha}"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABHA Number"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ben.abhaId}"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="0123456789" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RCH ID"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ben.rchId}"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="0123456789" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            showLayout="@{(role == 1) ? true : false}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_title_bar_cho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSecondary"
                android:paddingHorizontal="@dimen/padding_tiny"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_hh_id_cho"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="@{ben.benName + ' ' +ben.benSurname}"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorPrimaryVariant"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@+id/ll_title_bar_cho"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/margin_normal"
                    tools:text="0104185765164225" />

                <ImageView
                    android:id="@+id/iv_sync_state_cho"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/iv_sync_state_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hh_id_cho"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toTopOf="@+id/tv_hh_id_cho"
                    app:syncState="@{ben.syncState}"
                    tools:src="@drawable/ic_synced" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()-> clickListener.onClickedBen(ben)}"
                app:layout_constraintTop_toBottomOf="@id/ll_title_bar_cho">

                <LinearLayout
                    android:id="@+id/ll_row_cho_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_alignParentTop="true">

                    <include
                        android:id="@+id/rl_ben_id_cho"
                        style="@style/rv_item_ben_fields"
                        layout="@layout/rv_item_ben_element"
                        app:field="@{@string/long_to_string(ben.benId)}"
                        app:fieldTitle="@{@string/tv_ben_id_ph}" />

                    <include
                        android:id="@+id/rl_family_head_name_cho"
                        style="@style/rv_item_ben_fields"
                        layout="@layout/rv_item_ben_element"
                        app:field="@{ben.spouseName}"
                        app:fieldTitle="@{@string/tv_spouse}"
                        tools:ignore="IncludeLayoutParam" />

                    <include
                        android:id="@+id/rl_ben_mobile_no_cho"
                        style="@style/rv_item_ben_fields"
                        layout="@layout/rv_item_ben_element"
                        app:field="@{ben.mobileNo}"
                        app:fieldTitle="@{@string/tv_mob_no_ph}" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_row_cho_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    showLayout="@{showAbha}"
                    android:layout_below="@id/ll_row_cho_1">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_abha_cho"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:onClick="@{()-> clickListener.onClickABHA(ben)}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        app:cornerRadius="@dimen/padding_normal"
                        android:layout_marginStart="@dimen/margin_small"
                        android:text="ABHA"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_hh_id"
                        android:textColor="@color/secondaryLightColor"
                        android:backgroundTint="@color/green"
                        app:strokeColor="?attr/colorPrimary" />
                </LinearLayout>
            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>