<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="form"
            type="org.piramalswasthya.sakhi.model.FormElement" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/cl_ri"
        android:padding="@dimen/padding_wide">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{form.title}"
                android:padding="@dimen/padding_small"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hello you@!!" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

            </RadioGroup>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rg"
            android:text="@string/tv_required_text_asterisk"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/design_default_color_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:required="@{form.doubleStar}" />
        <TextView
            android:id="@+id/tv_high_risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Risk"
            android:layout_marginTop="@dimen/margin_normal"
            android:padding="@dimen/padding_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/design_default_color_error"
            app:layout_constraintEnd_toStartOf="@+id/check_red"
            app:layout_constraintTop_toTopOf="@id/cl_highlight"
            app:required="@{form.showHighRisk}" />

        <ImageView
            android:id="@+id/check_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:src="@drawable/ic_check_circle_green"
            android:padding="@dimen/padding_small"
            app:imgRequired="@{form.showHighRisk}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cl_highlight"
            />
        <TextView
            android:id="@+id/tv_nullable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rg"
            android:text="@string/tv_required_text_asterisk"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/design_default_color_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:required="@{form.required}" />

    </LinearLayout>
</layout>