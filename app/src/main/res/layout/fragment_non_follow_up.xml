<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home_activity.home.SchedulerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">


            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!--        <com.google.android.material.textfield.TextInputLayout-->
            <!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:hint="SELECT DATE">-->

            <!--            <com.google.android.material.textfield.TextInputEditText-->
            <!--                android:id="@+id/et_mainDate"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:drawableEnd="@drawable/ic_calendar"-->
            <!--                android:drawablePadding="10dp"-->
            <!--                android:focusable="false" />-->
            <!--        </com.google.android.material.textfield.TextInputLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_do_list"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/padding_wide"
                android:visibility="gone"
                android:orientation="horizontal">
<!--                <androidx.legacy.widget.Space-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"/>-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_anc1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:elevation="@dimen/padding_normal"
                    app:cardCornerRadius="@dimen/padding_normal"
                    app:cardElevation="@dimen/padding_normal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_wide">

                        <TextView
                            android:id="@+id/tv_ph_anc1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/beneficiaries_due_for_anc"
                            android:layout_alignParentTop="true"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:id="@+id/tv_anc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_ph_anc1"
                            android:layout_alignParentBottom="true"

                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="45" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

<!--                <androidx.legacy.widget.Space-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"/>-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_imm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:elevation="@dimen/padding_normal"
                    app:cardCornerRadius="@dimen/padding_normal"
                    app:cardElevation="@dimen/padding_normal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_wide">

                        <TextView
                            android:id="@+id/tv_ph_imm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="151dp"
                            android:text="@string/beneficiaries_due_for_immunization"
                            android:layout_alignParentTop="true"

                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="?attr/colorOnPrimary" />

                        <TextView
                            android:id="@+id/tv_imm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_ph_imm"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"

                            android:text="@string/_0"
                            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                            android:textColor="?attr/colorOnPrimary" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/high_risk_cases"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_wide"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_lwb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:elevation="@dimen/padding_normal"
                    app:cardCornerRadius="@dimen/padding_normal"
                    app:cardElevation="@dimen/padding_normal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_wide">

                        <TextView
                            android:id="@+id/tv_ph_lbwb"
                            android:lines="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnPrimary"
                            android:text="@string/ec"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <TextView
                            android:id="@+id/tv_lbwb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_ph_lbwb"
                            android:layout_alignParentEnd="false"
                            android:textColor="?attr/colorOnPrimary"
                            android:layout_centerHorizontal="true"
                            tools:text="7"
                            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_ec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:elevation="@dimen/padding_normal"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/padding_normal"
                    app:cardElevation="@dimen/padding_normal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_wide"
                        android:textColor="?attr/colorOnPrimary">

                        <TextView
                            android:id="@+id/tv_ph_ec"
                            android:lines="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/high_risk_babies"

                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <TextView
                            android:id="@+id/tv_ec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_ph_ec"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"

                            android:text="@string/_0"
                            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_anc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:elevation="@dimen/padding_normal"
                    app:cardCornerRadius="@dimen/padding_normal"
                    app:cardElevation="@dimen/padding_normal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_wide">

                        <TextView
                            android:id="@+id/tv_ph_anc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:text="@string/anc"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <TextView
                            android:id="@+id/tv_anc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_ph_anc"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                            tools:text="2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_non_pnc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:elevation="@dimen/padding_normal"
                    app:cardCornerRadius="@dimen/padding_normal"
                    app:cardElevation="@dimen/padding_normal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_wide">

                        <TextView
                            android:id="@+id/tv_hr_pnc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:textColor="?attr/colorOnPrimary"
                            android:text="@string/pnc"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <TextView
                            android:id="@+id/tv_hr_ec_pnc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_hr_pnc"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:textColor="?attr/colorOnPrimary"
                            tools:text="@string/_0"
                            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/padding_wide"
            android:orientation="horizontal">

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>