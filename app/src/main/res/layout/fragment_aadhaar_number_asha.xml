<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ben_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_narrow"
                android:layout_marginHorizontal="20dp"
                android:padding="@dimen/padding_normal"
                android:text="@string/generating_abha_for"
                android:visibility="gone"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/ben_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_narrow"
                android:layout_marginHorizontal="20dp"
                android:padding="@dimen/padding_normal"
                android:visibility="gone"
                android:fontFamily="@font/roboto_italic"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ben_name_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/enter_aadhaar_number"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ben_name" />

            <ImageView
                android:id="@+id/ivValidAadhaar"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_check_circle_grey"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.example.myapplication.addharEditText.BlockEditText
                android:id="@+id/tiet_aadhaar_number"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:defaultLength="4"
                app:inputType="Integer"
                app:numberOfBlock="3"
                app:separatorCharacter="-"
                app:editTextBackground="@drawable/selector_edittext_round_border_line"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toStartOf="@+id/ivShowText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageView
                android:id="@+id/ivShowText"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/ic_show"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="@+id/tiet_aadhaar_number"
                app:layout_constraintBottom_toBottomOf="@+id/tiet_aadhaar_number"
                app:layout_constraintStart_toEndOf="@+id/tiet_aadhaar_number"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/textview"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/tiet_aadhaar_number"
                app:layout_constraintTop_toBottomOf="@+id/tiet_aadhaar_number"/>

            <!--     <com.google.android.material.textfield.TextInputLayout
                  android:id="@+id/til_aadhaar_number"
